{{#if (eq game "people")}}
  <div class="row justify-content-center">
    {{#each gamePair as |person i|}}
      <div class="col col-md-5 text-center">
        <h2 class="text-white">
          <span>{{#if i}}Computer : {{else}} Player : {{/if}}</span>
          <span>{{unless i leftPlayerScore rightPlayerScore}}</span>
        </h2>

        <div class="card mt-5">
          <div class="card-body">
            {{#if (not (and i hideComputerCard))}}
              <h3 class="card-title mb-2">{{person.name}}</h3>
              <table class="table">
                <tbody>
                  <tr>
                    <th scope="row">Gender</th><td>{{person.gender}}</td>
                  </tr>
                  <tr>
                    <th scope="row">Eye Colour</th><td>{{person.eye_color}}</td>
                  </tr>
                  <tr>
                    <th scope="row">Mass</th><td>{{person.mass}}</td>
                  </tr>
                  <tr>
                    <th scope="row">Height</th><td class="font-weight-bold"><span class="badge badge-dark">{{person.height}}</span></td>
                  </tr>
                  <tr>
                    <th scope="row">Birth Year</th><td>{{person.birth_year}}</td>
                  </tr>
                </tbody>
              </table>
            {{else}}
              <h3 class="card-title mb-2">?</h3>
              <table class="table">
                <tbody>
                  <tr>
                    <th scope="row">Gender</th><td>?</td>
                  </tr>
                  <tr>
                    <th scope="row">Eye Colour</th><td>?</td>
                  </tr>
                  <tr>
                    <th scope="row">Mass</th><td>?</td>
                  </tr>
                  <tr>
                    <th scope="row">Height</th><td>?</td>
                  </tr>
                  <tr>
                    <th scope="row">Birth Year</th><td>?</td>
                  </tr>
                </tbody>
              </table>
            {{/if}}
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{/if}}

{{#if (eq game "starships")}}
  <div class="row justify-content-center">
    {{#each gamePair as |starship i|}}
      <div class="col col-md-5 text-center">
        <h2 class="text-white">
          <span>{{#if i}}Computer : {{else}} Player : {{/if}}</span>
          <span>{{unless i leftPlayerScore rightPlayerScore}}</span>
        </h2>

        <div class="card mt-5">
          <div class="card-body">
            {{#if (not (and i hideComputerCard))}}
              <h3 class="card-title mb-2 font-weight-bold">{{starship.name}}</h3>

              <table class="table">
                <tbody>
                  <tr>
                    <th scope="row">Crew</th><td>{{starship.crew}}</td>
                  </tr>
                  <tr>
                    <th scope="row">Length</th><td class="font-weight-bold"><span class="badge badge-dark">{{starship.length}}</span></td>
                  </tr>
                  <tr>
                    <th scope="row">Hyperdrive Rating</th><td>{{starship.hyperdrive_rating}}</td>
                  </tr>
                  <tr>
                    <th scope="row">Passengers</th><td>{{pow starship.passengers}}</td>
                  </tr>
                  <tr>
                    <th scope="row">Cost in Credits</th><td>{{pow starship.cost_in_credits}}</td>
                  </tr>
                  <tr>
                    <th scope="row">Cargo Capacity</th><td>{{pow starship.cargo_capacity}}</td>
                  </tr>
                </tbody>
              </table>
            {{else}}
              <h3 class="card-title mb-2 font-weight-bold">?</h3>

              <table class="table">
                <tbody>
                  <tr>
                    <th scope="row">Crew</th><td>?</td>
                  </tr>
                  <tr>
                    <th scope="row">Length</th><td>?</td>
                  </tr>
                  <tr>
                    <th scope="row">Passengers</th><td>?</td>
                  </tr>
                  <tr>
                    <th scope="row">Hyperdrive Rating</th><td>?</td>
                  </tr>
                  <tr>
                    <th scope="row">Cost in Credits</th><td>?</td>
                  </tr>
                  <tr>
                    <th scope="row">Cargo Capacity</th><td>?</td>
                  </tr>
                </tbody>
              </table>
            {{/if}}
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{/if}}

<div class="row">
  <div class="col text-center">
    <div class={{unless hideComputerCard "d-none"}}>
      <button type="button" name="button" class="btn btn-lg btn-light mt-5 mb-5" onclick={{action "play" shuffledModel selectedAttr}}>
        PLAY
      </button>
    </div>
  </div>
</div>

<div class="row">
  <div class="col text-center">
    <p class="display-block text-white mt-5">{{result}}</p>
  </div>
</div>
