{{#if (eq game "people")}}
  <div class="row justify-content-center">
    {{#each gamePair as |person i|}}
      <div class="col col-md-5 text-center">
        <h2 class="text-white">
          <span>{{#if i}}Computer : {{else}} Player : {{/if}}</span>
          <span>{{unless i leftPlayerScore rightPlayerScore}}</span>
        </h2>

        <div class="card mt-5">
          <div class="card-body">
            {{#if (not (and i hideComputerCard))}}
              <h3 class="card-title mb-2">{{person.name}}</h3>
              <table class="table">
                <tbody>
                  <tr>
                    <th scope="row">Gender</th><td>{{person.gender}}</td>
                  </tr>
                  <tr>
                    <th scope="row">Eye Colour</th><td>{{person.eye_color}}</td>
                  </tr>
                  <tr>
                    <th scope="row" style="width: 50%">Mass</th><td style="width: 50%">{{person.mass}}</td>
                  </tr>
                  <tr>
                    <th scope="row">Height</th><td>{{person.height}}</td>
                  </tr>
                  <tr>
                    <th scope="row">Birth Year</th><td>{{person.birth_year}}</td>
                  </tr>
                </tbody>
              </table>
            {{else}}
              <h3 class="card-title mb-2">?</h3>
              <table class="table">
                <tbody>
                  <tr>
                    <th scope="row">Gender</th><td>?</td>
                  </tr>
                  <tr>
                    <th scope="row">Eye Colour</th><td>?</td>
                  </tr>
                  <tr>
                    <th scope="row" style="width: 50%">Mass</th><td style="width: 50%">?</td>
                  </tr>
                  <tr>
                    <th scope="row">Height</th><td>?</td>
                  </tr>
                  <tr>
                    <th scope="row">Birth Year</th><td>?</td>
                  </tr>
                </tbody>
              </table>
            {{/if}}
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{/if}}

{{#if (eq game "starships")}}
  <div class="row justify-content-center">
    {{#each gamePair as |starship i|}}
      <div class="col col-md-5 text-center">
        <h2 class="text-white">
          <span>{{#if i}}Computer : {{else}} Player : {{/if}}</span>
          <span>{{unless i leftPlayerScore rightPlayerScore}}</span>
        </h2>

        <div class="card mt-5">
          <div class="card-body">
            {{#if (not (and i hideComputerCard))}}
              <h3 class="card-title mb-2 font-weight-bold">{{starship.name}}</h3>

              <ul class="list-unstyled">
                <li class="font-weight-bold">Crew : {{starship.crew}}</li>
                <li>Length : {{starship.length}}</li>
                <li>Passengers : {{starship.passengers}}</li>
                <li>Hyperdrive Rating : {{starship.hyperdrive_rating}}</li>
                <li>Cost in Credits : {{starship.cost_in_credits}}</li>
                <li>Cargo Capacity : {{starship.cargo_capacity}}</li>
              </ul>
            {{else}}
              <h3 class="card-title mb-2 font-weight-bold">?</h3>

              <ul class="list-unstyled">
                <li class="font-weight-bold">Crew : ?</li>
                <li>Length : ?</li>
                <li>Passengers : ?</li>
                <li>Hyperdrive Rating : ?</li>
                <li>Cost in Credits : ?</li>
                <li>Cargo Capacity : ?</li>
              </ul>
            {{/if}}
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{/if}}

<div class="row">
  <div class="col text-center">
    <div class={{unless hideComputerCard "d-none"}}>
      <button type="button" name="button" class="btn btn-lg btn-light mt-5 mb-5" onclick={{action "play" shuffledModel selectedAttr}}>
        PLAY
      </button>
    </div>
  </div>
</div>

<div class="row">
  <div class="col text-center">
    <p class="display-block text-white mt-5">{{result}}</p>
  </div>
</div>
