{{#if (eq game "people")}}
  <div class="row justify-content-center">
    {{#each gamePair as |person i|}}
      <div class="col col-md-5 text-center">
        <h2 class="text-white mb-5">
          <span>{{#if i}}Computer : {{else}} Player : {{/if}}</span>
          <span>{{unless i leftPlayerScore rightPlayerScore}}</span>
        </h2>

        <div class="card mt-5">
          <div class="card-body">
            {{#if (not (and i hideComputerCard))}}
              <h3 class="card-title mb-2">{{person.name}}</h3>
              <table class="table mt-4">
                <tbody>
                  <tr>
                    <th scope="row" class="text-left">Gender</th><td class="text-right">{{person.gender}}</td>
                  </tr>
                  <tr>
                    <th scope="row" class="text-left">Eye Colour</th><td class="text-right">{{person.eye_color}}</td>
                  </tr>
                  <tr>
                    <th scope="row" class="text-left">Mass</th><td class="text-right">{{person.mass}}</td>
                  </tr>
                  <tr>
                    <th scope="row" class="text-left">Height</th>
                    <td class="font-weight-bold text-right">
                      {{#if (or (and i isRightWinner) (and isLeftWinner (not i)))}}
                        <span class="badge badge-warning font-size-100">
                          {{person.height}}
                        </span>
                      {{else}}
                        {{person.height}}
                      {{/if}}
                    </td>
                  </tr>
                  <tr>
                    <th scope="row" class="text-left">Birth Year</th><td class="text-right">{{person.birth_year}}</td>
                  </tr>
                </tbody>
              </table>
            {{else}}
              <h3 class="card-title mb-2">?</h3>
              <table class="table mt-4">
                <tbody>
                  <tr>
                    <th scope="row" class="text-left">Gender</th><td class="text-right">?</td>
                  </tr>
                  <tr>
                    <th scope="row" class="text-left">Eye Colour</th><td class="text-right">?</td>
                  </tr>
                  <tr>
                    <th scope="row" class="text-left">Mass</th><td class="text-right">?</td>
                  </tr>
                  <tr>
                    <th scope="row" class="text-left">Height</th><td class="text-right">?</td>
                  </tr>
                  <tr>
                    <th scope="row" class="text-left">Birth Year</th><td class="text-right">?</td>
                  </tr>
                </tbody>
              </table>
            {{/if}}
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{/if}}

